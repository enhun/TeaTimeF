<!-- TeaTimeDemo/Areas/Customer/Views/Story/StoryDetail.cshtml -->
@model TeaTimeDemo.Models.Story

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="card shadow vintage-detail-card">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top vintage-detail-img" alt="@Model.Title">
        }
        <div class="card-body p-4 vintage-detail-body">
            <h1 class="mb-4 text-center vintage-title">@Model.Title</h1>

            <div class="text-muted text-center mb-4">
                <i class="bi bi-calendar3"></i> @Model.CreatedDate.ToString("yyyy年MM月dd日")
                @if (Model.Product != null)
                {
                    <span class="mx-3">|</span>
                    <i class="bi bi-cup-hot"></i>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@Model.ProductId">
                        @Model.Product.Name
                    </a>
                }
            </div>

            <div class="story-content">
                @Html.Raw(Model.Content)
            </div>

            <div class="text-center mt-5">
                <a asp-action="GrandmaStories" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> 返回故事列表
                </a>

                @if (Model.Product != null)
                {
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@Model.ProductId" class="btn btn-primary ms-2">
                        <i class="bi bi-cup-hot"></i> 查看相關飲品
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .vintage-detail-card {
        border-radius: 12px;
        border: 1px solid #e5d3b3;
        background-color: #fff9e6;
        overflow: hidden;
    }

    .vintage-detail-img {
        height: 400px;
        object-fit: cover;
        border-bottom: 1px dashed #d9b38c;
    }

    .vintage-detail-body {
        font-family: serif;
    }

    .vintage-title {
        font-family: 'Times New Roman', serif;
        color: #8B4513;
        border-bottom: 2px dotted #8B4513;
        padding-bottom: 10px;
        display: inline-block;
    }

    .story-content {
        line-height: 1.8;
        font-size: 1.1rem;
        white-space: pre-line;
    }
</style>

