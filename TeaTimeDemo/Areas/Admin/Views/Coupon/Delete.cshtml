@* TeaTimeDemo/Areas/Admin/Views/Coupon/Delete.cshtml *@
@model Coupon
@{
    ViewData["Title"] = "刪除優惠券";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">刪除優惠券</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Code" class="p-0"></label>
            <input asp-for="Code" class="form-control" disabled />
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" class="form-control" rows="3" disabled></textarea>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">刪除</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Coupon" asp-action="Index" class="btn btn-outline-secondary form-control">
                    返回列表
                </a>
            </div>
        </div>
    </div>
</form>

